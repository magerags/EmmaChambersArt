<h1>All artwork</h1>
<%= link_to "new artwork", new_artwork_path %>
<br>
<br>
<br>
<% @artworks.each do |art| %>
<div class="indexCard">
<%= cl_image_tag art.photo.key, height: 400 if art.photo.attached? %>
<%= art.name %>
<br>
<%= art.collection.name %>
<% if user_signed_in? %>
<%= link_to edit_artwork_path(art.id) do %>
<button class="btn btn-primary mx-1">edit</button>
<% end %>
<%= link_to artwork_path(art.id), method: :delete, data: { confirm: 'Are you sure?'} do %>
<button class="btn btn-primary mx-1">delete</button>
<% end %>
<% end %>
</div>
<% end %>
