<div id="carouselExampleIndicators" class="carousel carousel-fade" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @artworks.count.times do %>
      <% counter = 0 %>
      <li data-target="#carouselExampleIndicators" data-slide-to="<% counter %>">
      <% counter += 1 %>
    <% end %>
  </ol>
  <div class="carousel-inner">
  <% @artworks.each_with_index do |art,i|%>
  <div class="carousel-item <%= "active " if i==0 %>">
    <div class="image-container center">
    <%= cl_image_tag art.photo.key, class: "center" if art.photo.attached? %>
    </div>
     <div class="carousel-caption">
        <div class="left">
          <h1><%= art.name %></h1>
          <div class="subtitle">
          <h2 class="subtitle"><%= art.medium %></h2>
          <i class="fas fa-circle fa-xs"></i>
          <h2 class="subtitle"><%= art.size %></h2>
          </div>
          <h3><%= art.description %></h3>
        </div>
        <div class="right">
          <h2 class="align-right">Part of</h2>
          <h4> <%= link_to art.collection.name, collection_path(art.collection) %> </h4>
        </div>
      </div>
  </div>
  <%end%>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
