<h1>All collections</h1>
<%= link_to "new collection", new_collection_path %>
<br>
<br>
<br>
<br>


<% @collections.each do |coll| %>
<div class="indexCard">
<%= link_to coll.name, collection_path(coll.id) %>
<br>
<%= link_to edit_collection_path(coll.id) do %>
<button class="btn btn-primary mx-1">edit</button>
<% end %>

<%= link_to collection_path(coll.id), method: :delete, data: { confirm: 'Are you sure?'} do %>
<button class="btn btn-primary mx-1">delete</button>
<% end %>
</div>
<% end %>

